package views

templ FilterForm() {
	<form id="timeFilter" class="space-y-6">
		<div class="flex flex-wrap gap-3">
			<button
				hx-post="/filter"
				hx-vals='{"club_id":1}'
				type="button"
				class="bg-cyan-400 hover:bg-cyan-500 text-white px-6 py-2 rounded-md transition-colors duration-200"
				hx-target="#table-content"
				hx-swap="outerHTML"
			>
				club 1
			</button>
		</div>
	</form>
}
